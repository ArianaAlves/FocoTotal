// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// ENUMS
// ===========================================

enum TaskStatus {
  PENDENTE
  CONCLUIDA
}

enum Priority {
  BAIXA
  MEDIA
  ALTA
}

enum GoalStatus {
  EM_PROGRESSO
  CONCLUIDA
  ATRASADA
}

// ===========================================
// MODELS
// ===========================================

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  tasks     Task[]
  goals     Goal[]

  @@map("users")
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime?
  status      TaskStatus @default(PENDENTE)
  priority    Priority   @default(MEDIA)
  
  userId      Int
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("tasks")
}

model Goal {
  id              Int        @id @default(autoincrement())
  title           String
  description     String?
  target          Int
  currentProgress Int        @default(0)
  status          GoalStatus @default(EM_PROGRESSO)
  category        String     @default("Outros")
  dueDate         DateTime
  
  userId          Int
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@map("goals")
}