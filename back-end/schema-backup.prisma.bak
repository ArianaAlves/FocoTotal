// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// ENUMS
// ===========================================

enum TaskStatus {
  PENDENTE
  CONCLUIDA
}

enum Priority {
  BAIXA
  MEDIA
  ALTA
}

enum GoalStatus { // ✨ NOVO ENUM
  EM_PROGRESSO
  CONCLUIDA
  ATRASADA
}

// ===========================================
// MODELS
// ===========================================

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  tasks     Task[]
  goals     Goal[]  // ✨ Relacionamento adicionado
}

model Task {
  id           Int        @id @default(autoincrement())
  title        String
  description  String?
  dueDate      DateTime
  status       TaskStatus @default(PENDENTE)
  subject      String?
  priority     Priority?
  reminderDate DateTime?

  userId       Int
  user         User        @relation(fields: [userId], references: [id])

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

// --- ✨ NOVO MODELO GOAL PARA METAS ---
model Goal {
  id              Int         @id @default(autoincrement())
  title           String
  description     String?
  target          Float       // O valor que você precisa alcançar (ex: 10 projetos)
  currentProgress Float       @default(0) // O progresso atual
  dueDate         DateTime
  category        String      // Ex: "Desenvolvimento", "Finanças"
  status          GoalStatus  @default(EM_PROGRESSO) // Usa o novo Enum

  userId          Int
  user            User        @relation(fields: [userId], references: [id])

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}